# Database Configuration
MONGODB_URI=mongodb://localhost:27017/walletDB
REDIS_URL=redis://localhost:6379

# Supabase Configuration (REQUIRED for BSC Wallet)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# PostgreSQL Configuration
PG_USER=postgres
PG_HOST=localhost
PG_PASSWORD=your_postgres_password
PG_DATABASE=indexdemo
PG_PORT=5432

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# MongoDB Sharding
MONGO_POOL_MIN=10
MONGO_POOL_MAX=100

# Batch Processing
BATCH_SIZE=10000
TOTAL_USERS=1000000

# BSC Network RPCs (optional - for backend operations)
ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org
