{
  "name": "bsc-phantom-wallet",
  "version": "2.0.0",
  "description": "BSC Phantom Wallet - Professional BNB Smart Chain wallet with React frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed.js",
    "client": "cd client && npm run dev",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "setup": "npm install && npm run client:install",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client:build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "mongoose": "^7.3.4",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "winston": "^3.9.0",
    "bull": "^4.10.0",
    "bcrypt": "^5.1.0",
    "uuid": "^9.0.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "ethers": "^5.7.2",
    "dotenv": "^16.0.0",
    "axios": "^1.6.0",
    "pg": "^8.11.0",
    "celebrate": "^15.0.1",
    "joi": "^17.11.0",
    "bloom-filter": "^0.2.0",
    "prom-client": "^15.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}